(ns pokemon.queries)

(def pokemon-query
  "
query ($name:String!){
  pokemon(name: $name) {
    id
    number
    name
    attacks {
      special {
        name
        type
        damage
      }
    }
    evolutions {
      id
      number
      name
      weight {
        minimum
        maximum
      }
      attacks {
        fast {
          name
          type
          damage
        }
      }
    }
  }
}
")
